<div class="row">
  <div class="span3">
    <h1>Sign in</h1>
  </div>

  <div class="span3">
    <%= facebook_sign_in_button %>
    <%= semantic_form_for resource, :as => resource_name, :url => session_path(resource_name) do |f| %>
      <%= f.semantic_errors %>
      <%= f.inputs do %>
        <%= f.input :email, :label => false, :placeholder => 'Email Address' %>
        <%= f.input :password, :label => false, :placeholder => 'Password' %>
        <%= f.input :remember_me, :as => :boolean, :wrapper_html => {:class => 'checkbox'}, :input_html => {:class => "checkbox"} %>
      <% end %>
      <%= f.actions do %>
        <%= f.action :submit, :as => :button, :label => "Sign in", :button_html => {:class => 'btn btn-primary'} %>
      <% end %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>