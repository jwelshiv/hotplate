<div class="row">
  <div class="span3">
    <h1>Sign up</h1>
  </div>

  <div class="span3">
    <%= facebook_sign_in_button %>
    <%= semantic_form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f| %>
      <%= f.semantic_errors %>
      <%= f.inputs do %>
        <%= f.input :email, :label => false, :placeholder => 'Email Address' %>
        <%= f.input :password, :label => false, :placeholder => 'Password' %>
        <%= f.input :password_confirmation, :label => false, :placeholder => 'Confirm password' %>
      <% end %>
      <%= f.actions do %>
        <%= f.action :submit, :label => "Sign Up", :as => :button, :button_html => {:class => 'btn btn-large btn-success'} %>
      <% end %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>